@model StudentAttendence.Models.GroupTimetable

@{
    ViewBag.Title = "Create: Group Timetable";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Create New Group Timetable</strong>
                </div>
                <div class="card-body card-block">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">Group ID</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">Day</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.DropDownList("TimetableID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TimetableID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-1">
                        </div>
                        <div class="col col-md-6">
                            <button type="submit" class="btn btn-outline-primary" style="margin-right:40px;">Submit</button>
                            <button type="reset" class="btn btn-outline-secondary">Reset</button>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <span></span>
                    <i class="fa fa-arrow-left btn btn-outline-info">
                        @Html.ActionLink("Back to Previous Page", "Index")
                    </i>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}