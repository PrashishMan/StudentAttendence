@model StudentAttendence.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Change Use Account Password</strong>
                </div>
                <div class="card-body card-block">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">Current Password</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">New Password</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">Confirm Password</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-1">
                        </div>
                        <div class="col col-md-6">
                            <button type="submit" class="btn btn-outline-primary" style="margin-right:40px;">Save</button>
                            <button type="reset" class="btn btn-outline-secondary">Reset</button>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <span></span>
                    <i class="fa fa-arrow-left btn btn-outline-info">
                        @Html.ActionLink("Back to Previous Page", "Index")
                    </i>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}