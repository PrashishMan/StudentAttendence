@model StudentAttendence.Models.ModuleTimetableBridge

@{
    ViewBag.Title = "Details: Timetable";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Details :</strong>@Html.DisplayFor(model => model.TimeTableId)
            </div>
            <div class="card-body card-block">
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label"><b>Faculty Name</b></label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.FacultyName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.FacultyName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Semester</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Semester, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Module</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Year</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Day</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Day, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Day, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Room</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Room, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Room, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Start Time</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.ClassStartTime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.ClassStartTime, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">End Time</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.ClassEndTime, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.ClassEndTime, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>
        </div>
        <span class="">
            <i class="fa fa-plus btn btn-outline-primary">
                @Html.ActionLink("Back to List", "Index")
            </i>
        </span>
    </div>
</div>
