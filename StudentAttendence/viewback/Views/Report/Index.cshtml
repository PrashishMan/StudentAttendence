@model IEnumerable<StudentAttendence.Models.StudentsAttendence>

@{
    ViewBag.Title = "IndexL: Attendence Report";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title"> Attendence Report</strong>
            </div>
            <div class="card-body">

                <div class="" id="start_attendence">

                    @using (Ajax.BeginForm("StudentAttendence", "Report", new AjaxOptions { UpdateTargetId = "result" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group">
                            <div class="col col-md-2">
                                <label for="text-input" class=" form-control-label">Date</label>
                            </div>
                            <div class="col-md-2">
                                @Html.Editor("Date", new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessage("Date", "", new { @class = "text-danger" })
                            </div>
                            <div class="col col-md-2">
                                <label for="text-input" class=" form-control-label">Report Type</label>
                            </div>

                            <div class="col-md-3">
                                @Html.DropDownList("ReportType", null, htmlAttributes: new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <div class="class=" btn btn-outline-success"">
                                    <button type="submit" value="Generate Report" class="btn btn-outline-primary"> <i class="fa fa-location-arrow"></i> Generate Report</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>

                <div class="" id="teacher_module_role" style="border-style: solid; border-width: inherit;">
                    @using (Ajax.BeginForm("SemesterTeacherModulePage", "Report", new AjaxOptions { UpdateTargetId = "result" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label for="text-input" class=" form-control-label">Semester ID</label>
                        </div>

                        <div class="col-md-3">
                            @Html.DropDownList("SemesterID", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col col-md-1">
                            <label for="text-input" class=" form-control-label">Faculty</label>
                        </div>
                        <div class="col-md-3">
                            @Html.DropDownList("FacultyID", null, htmlAttributes: new { @class = "form-control" })
                        </div>
                        <div class="col-md-2">
                            <div class="class=" btn btn-outline-success"">
                                <button type="submit" value="Generate report" class="btn btn-outline-primary"> <i class="fa fa-location-arrow"></i>Generate Report</button>
                            </div>
                        </div>
                    </div>

                    }
                </div>
                <hr />
                <div class="row form-group">
                    <div class="col-md-4">
                        <div class="class=" btn btn-outline-success"">
                            <a href="@Url.Action("studentEnrollment")">

                                <buttom type="buttom" value="Generate Report" class="btn btn-outline-primary"> <i class="fa fa-eye"></i> Students Enrollment Report</buttom>
                            </a>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="class=" btn btn-outline-success"">
                            <a href="@Url.Action("GetTeacherTeachingHrs")">

                                <buttom type="buttom" value="Generate Report" class="btn btn-outline-primary"> <i class="fa fa-eye"></i> Teacher Teaching Report</buttom>
                            </a>
                        </div>
                    </div>

                </div>
                <hr />
                <b>List of Absent Student</b><br />
                @Html.ListBox("ControlName", ViewData["AbsentStudents"] as IEnumerable<SelectListItem>, new { @Style = "width: 189px;" })


            </div>
            </div>
        </div>
    </div>

                   



