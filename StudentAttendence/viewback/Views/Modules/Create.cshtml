@model StudentAttendence.Models.Module

@{
    ViewBag.Title = "Create: Module";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Create New Module</strong>
            </div>
            <div class="card-body card-block">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Faculty ID</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DropDownList("FacultyID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FacultyID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Semester ID</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DropDownList("SemesterID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SemesterID, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Module Name</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ModuleName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Module Type</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.ModuleType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ModuleType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Credit</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.Credit, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-1">
                    </div>
                    <div class="col col-md-6">
                        <button type="submit" class="btn btn-outline-primary" style="margin-right:40px;">Submit</button>
                        <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <span></span>
                <i class="fa fa-arrow-left btn btn-outline-info">
                    @Html.ActionLink("Back to Previous Page", "Index")
                </i>
            </div>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
