@model StudentAttendence.Models.Semester

@{
    ViewBag.Title = "Create: Semester";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Create New Semester</strong>
            </div>
            <div class="card-body card-block">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Semester No</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.SemesterNo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SemesterNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Start Date</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.SemesterStartDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SemesterStartDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">End Date</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.EditorFor(model => model.SemesterEndDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SemesterEndDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-1">
                    </div>
                    <div class="col col-md-6">
                        <button type="submit" class="btn btn-outline-primary" style="margin-right:40px;">Submit</button>
                        <button type="reset" class="btn btn-outline-secondary">Reset</button>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <span></span>
                <i class="fa fa-arrow-left btn btn-outline-info">
                    @Html.ActionLink("Back to Previous Page", "Index")
                </i>
            </div>
        </div>
    </div>
</div>
}