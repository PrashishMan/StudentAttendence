@model StudentAttendence.Models.Semester

@{
    ViewBag.Title = "Details: Semester";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Details :</strong>@Html.DisplayFor(model => model.SemesterNo)
                </div>
                <div class="card-body card-block">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @readonly = "readonly"  })
                    @Html.HiddenFor(model => model.SemesterID)
                    
                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">Semester No</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.EditorFor(model => model.SemesterNo, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.SemesterNo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">Start Date</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.EditorFor(model => model.SemesterStartDate, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.SemesterStartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">End Date</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.EditorFor(model => model.SemesterEndDate, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.SemesterEndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                    <div class="col col-md-10"></div>
                    <div class="col col-md-2">
                        <div class="btn btn-outline-success">
                            <i class="fa fa-pencil"></i>
                            @Html.ActionLink("Edit Record", "Edit", new { id = Model.SemesterID })
                        </div>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
}
<span class="">
    <i class="fa fa-arrow-left btn btn-outline-info">
        @Html.ActionLink("Back to Previous Page", "Index")
    </i>
</span>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}