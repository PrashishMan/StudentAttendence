@model StudentAttendence.Models.Student

@{
    ViewBag.Title = "Delete:Student";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong>Delete:</strong> @Html.DisplayFor(model => model.StudentID)
            </div>
        </div>
        <div class="card-body card-block">

            <div class="row form-group">
                <div class="col col-md-2">
                    <label for="text-input" class=" form-control-label">Group ID</label>
                </div>
                <div class="col-12 col-md-8">
                    @Html.DisplayFor(model => model.GroupID, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-2">
                    <label for="text-input" class=" form-control-label">Student Name</label>
                </div>
                <div class="col-12 col-md-8">
                    @Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-2">
                    <label for="text-input" class=" form-control-label">Email</label>
                </div>
                <div class="col-12 col-md-8">
                    @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-2">
                    <label for="text-input" class=" form-control-label">Contact</label>
                </div>
                <div class="col-12 col-md-8">
                    @Html.DisplayFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="row form-group">
                <div class="col col-md-2">
                    <label for="text-input" class=" form-control-label">Enroll Date</label>
                </div>
                <div class="col-12 col-md-8">
                    @Html.DisplayFor(model => model.EnrolledDate, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

        </div>
        <div class="card-footer">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions">
                    <span>Do You Really want to Delete this record ? </span>
                    <div class="btn">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Yes</button>
                    </div>

                    @Html.ActionLink("Back to Index Page", "Index")
                </div>
            }
        </div>
    </div>
</div>
