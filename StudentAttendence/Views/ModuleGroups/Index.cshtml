@model IEnumerable<StudentAttendence.Models.GroupModulesSemester>

@{
    ViewBag.Title = "Index";
}


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Student Group Module</strong>
                </div>
                <div class="card-body">
                    @Html.Partial("actionAdmin")
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">S.N.</th>
                                <th scope="col">Group ID</th>
                                <th scope="col">Semester</th>
                                <th scope="col">Module Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter = counter + 1;
                                    <tr>
                                        <th scope="row">@counter</th>
                                        <td>

                                            @Html.DisplayFor(modelItem => item.GroupID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SemesterNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ModuleName)
                                        </td>
                                        <td>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Student_Service"))
                                            {
                                                <div class="btn btn-outline-success">
                                                    <i class="fa fa-pencil"></i>
                                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                                </div>
                                            }
                                            <div class="btn btn-outline-info">
                                                <i class="fa fa-eye"></i>
                                                @Html.ActionLink("Details", "Details", new { id = item.ID })
                                            </div>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <div class="btn btn-outline-danger">
                                                    <i class="fa fa-trash"></i>
                                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
