@model StudentAttendence.Models.GroupModulesSemester

@{
    ViewBag.Title = "Delete: Module group";
}

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Delete: </strong> @Html.DisplayFor(model => model.ID)
                </div>
            </div>
            <div class="card-body card-block">
                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Semester</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DisplayFor(model => model.SemesterNo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Module</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DisplayFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-2">
                        <label for="text-input" class=" form-control-label">Group</label>
                    </div>
                    <div class="col-12 col-md-8">
                        @Html.DisplayFor(model => model.GroupID, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            </div>
            <div class="card-footer">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions">
                        <span>Do You Really want to Delete this record ? </span>
                        <div class="btn">
                            <button type="submit" class="btn btn-sm btn-outline-primary">Yes</button>
                        </div>

                        @Html.ActionLink("Back to Index Page", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
