@model StudentAttendence.Models.ModuleGroups

@{
    ViewBag.Title = "Edit: Group Module ";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Edit :</strong>@Html.DisplayFor(model => model.ID)
                </div>
                <div class="card-body card-block">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.SemesterID)

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">Semester</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.DropDownList("SemesterID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SemesterID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">Module</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.DropDownList("ModuleID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ModuleID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col col-md-2">
                            <label class="form-control-label">Group</label>
                        </div>
                        <div class="col-12 col-md-8">
                            @Html.DropDownList("GroupID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.GroupID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col col-md-6">
                            <button type="submit" class="btn btn-outline-primary" style="margin-right:40px;">Update</button>
                            <button type="reset" class="btn btn-outline-primary" hidden>Reset</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<span class="">
    <i class="fa fa-arrow-left btn btn-outline-info">
        @Html.ActionLink("Back to Previous Page", "Index")
    </i>
</span>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}