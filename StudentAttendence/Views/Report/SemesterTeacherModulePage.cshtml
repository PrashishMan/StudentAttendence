@model IEnumerable<StudentAttendence.Models.TeacherRoleModule>

@{
    ViewBag.Title = "SemesterTeacherModulePage";
    var FaacultyName = ViewData["FacultyName"];
    var SemesterNo = ViewData["semesterNo"];
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Student Enrollment</strong>
            </div>
            <div class="card-body">
                <table>
                    <tr>
                        <th>Faculty Name</th>
                        <td>@FaacultyName</td>
                    </tr>
                    <tr>
                        <th>Semester</th>
                        <td>@SemesterNo</td>
                    </tr>
                </table>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">S.N.</th>
                            <th scope="col">Name</th>
                            <th scope="col">Module</th>
                            <th scope="col">Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 0;
                            foreach (var item in Model)
                            {
                                counter = counter + 1;

                                <tr>
                                    <th scope="row">@counter</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModuleName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RoleName)
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="card-footer">
                    <span>
                        @Html.ActionLink("Back to List", "Index")
                    </span>

                </div>
            </div>

        </div>
    </div>
</div>

