@model IEnumerable<StudentAttendence.Models.StudentsAttendence>


@{
    ViewBag.Title = "Index: Attendence Record";
    var GroupName = ViewData["GroupName"];
    var ModuleName = ViewData["ModuleName"];
}


    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Attendence Record</strong>
                </div>
                <div class="card-body">
                    <table>
                        <tr>
                            <th>Group :</th>
                            <td>@GroupName</td>
                        </tr>

                        <tr>
                            <th>Module Name :</th>
                            <td>@ModuleName</td>
                        </tr>
                    </table>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">S.N.</th>
                                <th scope="col">Name</th>
                                <th scope="col">Date</th>
                                <th scope="col">Start Time</th>
                                <th scope="col">End Time</th>
                                <th scope="col">Status</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int counter = 0;
                                foreach (var item in Model)
                                {
                                    counter = counter + 1;
                                    <tr>
                                        <th scope="row">@counter</th>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.HiddenFor(modelItem => item.Date)
                                            @Html.FormatValue("yyy-MM-dd", item.Date.ToString("yyy-MM-dd"))
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClassStartTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ClassEndTime)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Condition)
                                        </td>
                                        <td>
                                            <div class="btn btn-outline-success">
                                                <i class="fa fa-pencil"></i>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                                            </div>
                                            <div class="btn btn-outline-info">
                                                <i class="fa fa-eye"></i>
                                                @Html.ActionLink("Details", "Details", new { id = item.ID })
                                            </div>
                                            <div class="btn btn-outline-danger">
                                                <i class="fa fa-trash"></i>
                                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <div class="card-footer" style="padding-bottom:30px;">
                        <span>
                            @Html.ActionLink("Back to List", "Index")
                        </span>
                        
                    </div>
                </div>
                
            </div>
        </div>
    </div>
